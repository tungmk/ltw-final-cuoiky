{
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "cd backend && npm i"
    },
    {
      "name": "Install Frontend",
      "command": "cd frontend && npm i"
    }
  ],
  "tasks": {
    "start": {
      "name": "start backend",
      "command": "cd backend && npm run dev",
      "runAtStart": true,
      "preview": { "port": 3001 }
    },
    "frontend": {
      "name": "start frontend",
      "command": "cd frontend && npm run dev",
      "runAtStart": true,
      "preview": { "port": 8080 }
    },
    "install": {
      "name": "install dependencies (root)",
      "command": "npm install"
    }
  }
}