    "start": {
      "name": "start",
      "command": "cd backend && npm run dev",
      "runAtStart": true,
      "preview": {
        "port": 8081
      }
    },
    "c": {
      "name": "c",
      "command": "cd frontend && npm run dev",
      "runAtStart": true
    }
  }
}
